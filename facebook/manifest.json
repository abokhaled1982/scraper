{
  "manifest_version": 3,
  "name": "Remote Facebook Poster",
  "version": "3.2",
  "permissions": ["activeTab", "scripting", "tabs", "alarms"],
  "host_permissions": [
    "https://*.facebook.com/*",
    "http://*.facebook.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}